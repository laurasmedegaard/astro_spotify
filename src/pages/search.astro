---
const { hasSearch } = Astro.props;
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import TopBar from "../components/TopBar.astro";
import Footer from "../components/Footer.astro";
import PlaylistCard from "../components/PlaylistCard.astro";
import Shelf from "../components/Shelf.astro";
import MainLayout from "../la";
---

{hasSearch && <input type="text" />}
<MainLayout hasSearch={true} title="Search">...</MainLayout>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
  </head>
  <body>
    <Nav />
    <TopBar />
    <main>
      <Shelf title="Focus">
        <PlaylistCard imgPath="https://picsum.photos/id/364/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/349/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/338/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/334/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/325/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/331/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/240/150/150" />
      </Shelf>

      <Shelf title="Spotify Playlist">
        <PlaylistCard imgPath="https://picsum.photos/id/76/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/68/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/65/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/325/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/349/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/240/150/150" />
        <PlaylistCard imgPath="https://picsum.photos/id/364/150/150" />
      </Shelf>
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "nav topbar"
      "nav main"
      "footer footer";
    height: 100%;
  }
  :global(main) {
    grid-area: main;
  }
  :global(nav) {
    grid-area: nav;
  }
  :global(.topbar) {
    grid-area: topbar;
  }
  :global(footer) {
    grid-area: footer;
  }

  main {
    display: grid;
    grid-auto-rows: min-content;
    gap: var(--space-xxl);

    background:
      linear-gradient(#1f1f1f 0, var(--surface-default) 100%) 0 0 / 100% 20rem no-repeat,
      var(--surface-default);

    overflow-y: auto;
    padding: var(--space-lg) var(--space-md);
  }

  @media (width > 1000px) {
    main {
      padding: var(--space-lg) var(--space-xl);
    }
  }
</style>
